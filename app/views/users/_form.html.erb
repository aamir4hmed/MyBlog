<%= form_with(model: user, local: true, validate: true) do |form| %>
  <div class="row">
    <div class = "col-5">

      <%if flash[:notice]%>
        <p class = "alert alert-info alert-dark alert-dismissible fade show" id="notice"><%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
        </button></p>
        <%else%>
        <p></p>
      <%end%>  
    </div>
  </div>  
  <hr> 
  <table class = "table table-condensed box-form">  
  <thead>
  <tr class="row">
    <td class = "col-5">
      <h3><strong>New User</strong></h3>  
    </td>
  </tr>  
  <tr class="row">
    <td class = "col-5">
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </td>
  </tr>
  </thead>
  <tbody>
  <tr class="row">
    <td class = "col-5">
      <%= form.label :name %>
    </td>  
    <td class = "col-5">
      <%= form.text_field :name, id: :user_name %>
    </td>
  </tr>  

  <tr class="row">
    <td class = "col-5">
      <%= form.label :email %>
    </td>  
    <td class = "col-5">
      <%= form.text_field :email, id: :user_email %>
    </td>
  </tr>

    <tr class="row">
      <td class = "col-5">
        <%= form.label :password %>
      </td>  
      <td class = "col-5">
        <%= form.password_field :password, id: :user_password %>
      </td>
    </tr>

    <tr class="row">
      <td class = "col-5">
        <%= form.label :password_confirmation %>
      </td>  
      <td class = "col-5">
        <%= form.password_field :password_confirmation, id: :user_password %>
      </td>
    </tr>

    <tr class="row">
      <td class = "col-5">
        <%= form.label :country_code %>
      </td>  
      <td class = "col-5">
        <%= form.text_field :country_code, id: :user_country_code %>
      </td>
    </tr>

    <tr class="row">
      <td class = "col-5">
        <%= form.label :phone %>
      </td> 
      <td class = "col-5"> 
        <%= form.text_field :phone, id: :user_phone %>
      </td>
    </tr>
    <div class="field">
      <%= form.hidden_field :provider, :value => "NewBlog" %>
    </div>

    <div>
      <tr class="row">
        <td class = "col-5">
          <%= form.submit 'Sign up' %>
        </td>
        <td class = "col-5">
          <%= link_to 'Back', new_session_path, class: "btn btn-info" %>
        </td>
      </tr>
    </div>
  <% end %>
  </tbody>
</table> 


